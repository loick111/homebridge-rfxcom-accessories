{
  "pluginAlias": "RFXCOMAccessories",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Platform name",
        "type": "string",
        "required": true,
        "default": "RFXCOM"
      },
      "tty": {
        "title": "TTY",
        "description": "TTY to use to connect to RFXCOM",
        "type": "string",
        "required": true,
        "default": "/dev/ttyUSB0"
      },
      "debug": {
        "title": "Debug mode",
        "type": "boolean",
        "required": true,
        "default": false
      },
      "discover": {
        "title": "Discover devices",
        "description": "Will print received devices events",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "devices": {
        "type": "object",
        "properties": {
          "rfy": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "title": "Accessory name",
                  "type": "string",
                  "required": true
                },
                "deviceId": {
                  "title": "Device ID",
                  "description": "deviceId registered in RFXCOM",
                  "type": "string",
                  "required": true,
                  "default": "0x000000/1"
                },
                "reversed": {
                  "title": "Reverse direction",
                  "type": "boolean",
                  "required": true,
                  "default": false
                },
                "openDurationSeconds": {
                  "title": "Open duration",
                  "description": "Open duration in seconds",
                  "type": "string",
                  "required": true
                },
                "closeDurationSeconds": {
                  "title": "Close duration",
                  "description": "Close duration in seconds",
                  "type": "string",
                  "required": true
                },
                "forceCloseAtStartup": {
                  "title": "Force close at startup",
                  "description": "Force close at startup",
                  "type": "boolean",
                  "required": true,
                  "default": true
                }
              }
            }
          },
          "weatherSensors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "title": "Accessory name",
                  "type": "string",
                  "required": true
                },
                "type": {
                  "title": "Sensor Type",
                  "description": "RFXCOM type (temperature1, humidity1, ...)",
                  "type": "string",
                  "required": true
                },
                "id": {
                  "title": "Sensor ID",
                  "type": "string",
                  "required": true
                }
              }
            }
          },
          "switch": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "title": "Accessory name",
                  "type": "string",
                  "required": true
                },
                "type": {
                  "title": "Type",
                  "description": "lighting1, lighting2, ...",
                  "type": "string",
                  "required": true
                },
                "subtype": {
                  "title": "Subtype id",
                  "type": "string",
                  "required": true
                },
                "id": {
                  "title": "Device ID",
                  "type": "string",
                  "required": true
                },
                "forceOffAtStartup": {
                  "title": "Force off at startup",
                  "description": "Force off at startup",
                  "type": "boolean",
                  "required": true,
                  "default": true
                }
              }
            }
          }
        }
      }
    }
  }
}
