{
  "pluginAlias": "RFXCOMAccessories",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "name",
        "description": "Platform name",
        "type": "string",
        "required": true,
        "default": "RFXCOM"
      },
      "tty": {
        "title": "tty",
        "description": "TTY to use to connect to RFXCOM",
        "type": "string",
        "required": true,
        "default": "/dev/ttyUSB0"
      },
      "debug": {
        "title": "debug mode",
        "type": "boolean",
        "required": true,
        "default": false
      },
      "devices": {
        "type": "object",
        "properties": {
          "rfy": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "title": "name",
                  "description": "Accessory name",
                  "type": "string",
                  "required": true
                },
                "deviceId": {
                  "title": "deviceId",
                  "description": "deviceId registered in RFXCOM",
                  "type": "string",
                  "required": true,
                  "default": "0x000000/1"
                },
                "openCloseDurationSeconds": {
                  "value": "openCloseDurationSeconds",
                  "description": "Open/Close duration in seconds",
                  "type": "string",
                  "required": true
                }
              }
            }
          }
        }
      }
    }
  }
}