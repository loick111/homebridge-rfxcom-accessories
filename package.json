{
  "displayName": "Homebridge RFXCOM Accessories",
  "name": "homebridge-rfxcom-accessories",
  "description": "Homebridge plugin for RFXCOM Accessories",
  "license": "MIT",
  "author": "Loick MAHIEUX <loick111@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/loick111/homebridge-rfxcom-accessories.git"
  },
  "bugs": {
    "url": "https://github.com/loick111/homebridge-rfxcom-accessories/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "homebridge": ">=1.3.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mock": "node test-with-mock.js",
    "prepublishOnly": "npm run lint && npm run build && npm run test",
    "dev": "npm run build && homebridge -D -U ~/.homebridge-dev"
  },
  "keywords": [
    "homebridge-plugin",
    "rfxcom",
    "rfxtrx",
    "rfy",
    "rts",
    "somfy",
    "window covering",
    "blinds",
    "homekit",
    "awning"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "homebridge": "^1.11.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "rfxcom": "^2.6.2"
  }
}
